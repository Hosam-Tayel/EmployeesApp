@model Employee



<h2 class="text-primary">Create</h2>



<img src="/img/incorporation.png" width="200" height="200" />

<form asp-action="Create" method="post">

    
        <div>
        <label asp-for="EmployeeNumber">Employee Number</label>
        <input asp-for="EmployeeNumber" class="form-control"/>
        <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
        </div>

        <div>
        <label asp-for="EmployeeName">Employee Name</label>
        <input asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>  

        <div>
        <label asp-for="DOB">Date of Birth</label>
        <input type="date" asp-for="DOB" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
         </div>

         <div>
        <label asp-for="HiringDate">Hiring Date</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div>
        <label asp-for="NetSalary">Net Salary</label>
        <input asp-for="NetSalary" class="form-control" />
        <span asp-validation-for="NetSalary" class="text-danger"></span>
        </div>

        <div>
        <label asp-for="GrossSalary">Gross Salary</label>
        <input asp-for="GrossSalary" class="form-control mb-3" />
        <span asp-validation-for="GrossSalary" class="text-danger"></span>
        </div>
        <br />
        <div>
        <button type="submit" class="btn btn-primary mb-3">Save</button>
        <button asp-action="Index" type="submit" class="btn btn-secondary mb-3">Cancel</button>
         </div>


</form>

