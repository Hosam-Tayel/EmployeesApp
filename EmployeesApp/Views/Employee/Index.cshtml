<hr />
<a asp-action="Create" class="btn btn-primary mb-3">Add new Employee</a>


<div asp-validation-summary="All"></div>

@if (!Model.Any())
{
    <div class="alert alert-danger">
        no employees Found
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HiringDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.GrossSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NetSalary)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(dataitem => item.EmployeeNumber)

                    </td>
                    <td>
                        @Html.ActionLink(item.EmployeeName,"Details","Employee",new{id=item.EmployeesId})

                    </td>
                    <td>
                        @Html.DisplayFor(dataitem => item.DOB)

                    </td>
                    <td>
                        @Html.DisplayFor(dataitem => item.HiringDate)

                    </td>
                    <td>
                        @Html.DisplayFor(dataitem => item.GrossSalary)

                    </td>
                    <td>
                        @Html.DisplayFor(dataitem => item.NetSalary)

                    </td>

                    <td>
                        <a href="@Url.Action("Edit","Employee",new {id= item.EmployeesId})" class="btn btn-primary">Edit</a>

                    </td>
                    <td>


                       
                          <div class="btn alert-danger">
                            @Html.ActionLink("Delete", "Delete", "Employee", new { id = item.EmployeesId },new { onclick = "return confirm('Are you sure you want to delete this item?');" })

                        </div>  

                    </td>

                   



                </tr>
            }
        </tbody>
    </table>
}



